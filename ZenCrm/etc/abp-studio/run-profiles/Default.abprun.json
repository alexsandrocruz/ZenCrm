{
  "applications": {
    "ZenCrm.HttpApi.Host": {
      "type": "dotnet-project",
      "launchUrl": "https://localhost:44349",
      "path": "../../../src/ZenCrm.HttpApi.Host/ZenCrm.HttpApi.Host.csproj",
      "kubernetesService": ".*-httpapihost$",
      "healthCheckEndpoint": "/health-status",
      "healthUiEndpoint": "/health-ui",
      "execution": {
        "order": 4
      }
    },
    "ZenCrm.Angular": {
      "type": "cli",
      "workingDirectory": "../../../angular",
      "startCommand": "./start.ps1",
      "launchUrl": "http://localhost:4200",
      "kubernetesService": ".*-angular$",
      "execution": {
        "order": 2
      }    
    }
  },
  "containers": {
    "serviceName": "ZenCrm-Containers",
  },
  "tasks":{
    "Initialize Solution":{
    "type": "cli",
    "runOnSolutionOpen": true,
    "startCommand": "etc/scripts/initialize-solution.ps1",
    "workingDirectory": "../../../"
    },
    "Migrate Database":{
    "type": "cli",
    "runOnSolutionOpen": false,
    "startCommand": "etc/scripts/migrate-database.ps1",
    "workingDirectory": "../../../"
    }
  }
}